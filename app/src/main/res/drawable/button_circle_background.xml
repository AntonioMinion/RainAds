<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <gradient
                    android:angle="90"
                    android:endColor="@color/white_40"
                    android:startColor="@color/white_10"
                    android:type="linear"/>
            <size
                    android:width="56dp"
                    android:height="56dp"/>
        </shape>
    </item>
    <!-- Smaller red circle in front -->
    <item>
        <shape android:shape="oval">
            <stroke android:color="@android:color/transparent"
                    android:width="12dp"/>
            <solid android:color="@color/colorAccent"/>
            <size
                    android:width="56dp"
                    android:height="56dp"/>
        </shape>
    </item>
</layer-list>